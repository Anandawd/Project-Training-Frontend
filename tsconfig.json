{
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "target": "ESNext",
    "types": ["vite/client", "src/types/vue-draggable-resizable.d.ts"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "WebWorker",
      "es5",
      "es6",
      "es2016"
    ],
    "resolveJsonModule": true,
    "strictNullChecks": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js",
    "tests/**/*.ts",
    "public/drag-min.js",
    "src/views/pages/modules/general/tools/settings/components/hotel-information-form/hotel-information.-formts",
    "public/service-worker.js"
  ],
  "exclude": ["node_modules"]
}
